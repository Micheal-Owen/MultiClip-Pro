{
  "manifest_version": 3,
  "name": "MultiClip Pro",
  "version": "1.0.0",
  "description": "Enhanced clipboard manager for Chrome",
  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
